{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "pre-commit": {
    "enabled": true,
    "automerge": true
  },
  "packageRules": [
    {
      "groupName": "ruff",
      "automerge": true,
      "matchPackageNames": [
        "/ruff/",
        "/charliermarsh/ruff-pre-commit/"
      ]
    }
  ]
}
